<div class="page-header">
	<div class="row">
		<div class="span6">
			<h1><%= @user.full_name %></h1>
		</div>
		<div class="span1">
			<%= image_tag status.user.gravatar_url %>
		</div>
	</div>
</div>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="status">
			<%= status.content %>
			<br>
			<%= link_to time_ago_in_words(status.created_at) + " ago", status_path(status) %>
		</div>
	<% end %>
<% end %>		